<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/rel">
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="70dp"

        android:text="Weject Service OFF/ON "
android:fadingEdge="horizontal"
        android:textSize="23sp"
        android:background="@color/darkred"
        android:id="@+id/switch5"
        android:checked="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Dialog box mode Disabled/Enabled"
            android:textSize="18sp"

            android:id="@+id/switch1"


            android:checked="false"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"


            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="155dp" />



        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FastCut mode Disabled/Enabled"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"




            android:id="@+id/switch2"
            android:checked="false"

            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />









        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="SwipeCut mode Disabled/Enabled"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"


            android:id="@+id/switch3"
            android:checked="false"

            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />










    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"


        android:text=""
        android:id="@+id/stext"
        android:layout_below="@+id/switch5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rejecting/missing a call from a WhatsApp contact opens a dialog box. Choose yes to open caller&apos;s WhatsApp chat."
        android:id="@+id/textView"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        android:layout_below="@+id/switch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rejecting/missing a call from a WhatsApp contact opens caller&apos;s WhatsApp chat directly."
        android:id="@+id/textView2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/switch2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rejecting/missing a call from a WhatsApp contact puts a Weject icon and WhatsApp tray on screen. Swipe Weject icon towards the tray to open caller&apos;s WhatsApp chat."
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/switch3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />






</RelativeLayout>
    </LinearLayout>
    </ScrollView>